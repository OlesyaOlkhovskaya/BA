@startuml
!define RECTANGLE class

RECTANGLE Пользователь {
  + Регистрация
  + Создание профиля
  + Просмотр курсов
  + Прохождение курсов
}

RECTANGLE Преподаватель {
  + Регистрация
  + Создание профиля
  + Разработка курсов
  + Публикация курсов
}

RECTANGLE Учебное_заведение {
  + Регистрация
  + Создание профиля
  + Управление курсами
}

RECTANGLE Администратор {
  + Проверка регистраций
  + Управление пользователями
  + Управление курсами
}

RECTANGLE Система {
  + Управление пользователями
  + Управление курсами
  + Управление учебными материалами
}

Пользователь --> Система : Взаимодействие
Преподаватель --> Система : Взаимодействие
Учебное_заведение --> Система : Взаимодействие
Администратор --> Система : Взаимодействие

@enduml

